//Tamagotchi

class MascotaVirtual {
var nivelDeContentidad
var estado
var cantidadDeVecesQueJugo

  method nivelDeContentidad(){
  return nivelDeContentidad
  }

  method comer(){
  estado.comer(self)
  }

  methodjugar(){
  estado.jugar(self)
  }

  method jugar?(){
  }

}

object hambrienta{
  method comer(tamagotchi){
  tamagotchi.cambiarEstado(contenta)
  }
  
  method jugar(){
  tamagotchi.cambiarEstado(malHumor)
  }
}

object contenta{
  method comer(){
  nivelDeContentidad +1
  }
  
  method jugar(){
    if(cantidadDeVecesQueJugo >5){
     tamagotchi.cambiarEstado(hambrienta)
    }else{
      nivelDeContentidad + 2
    }
  }
  
}

object malHumor{
  
  method comer(minutos){
    if(minutos>80){
       tamagotchi.cambiarEstado(contenta)
    }
  }

  method jugar(){
   tamagotchi.cambiarEstado(contenta)
  }

}










