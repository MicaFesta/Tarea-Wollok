//Tamagotchi

class MascotaVirtual {
var nivel
var estado
var cantidadDeVeces

method comer(){
estado.comer(self)
}

methodjugar(){
estado.jugar(self)
}

method jugar?(){
}

}

object hambrienta{
  method comer(tamagotchi){
  tamagotchi.cambiarEstado(contenta)
  }
  
  method jugar(){
  tamagotchi.cambiarEstado(malHumor)
  }
}

object contenta{
  method comer(){
  nivel +1
  }
  
  method jugar(){
    if(cantidadDeVecesQueJugo >5){
    tamagotchi.cambiarEstado(hambrienta)
    }else{
    nivel +2
    }
  }
  
}

object malHumor{
  
  method comer(minutos){
    if(minutos>80){
       tamagotchi.cambiarEstado(contenta)
    }
  }

  method jugar(){
   tamagotchi.cambiarEstado(contenta)
  }

}










